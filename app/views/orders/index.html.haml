          -#       %p ポイントを使用する
          -#       %i.fas.fa-chevron-down
          -#     = check_box '' ,{},{id:"label1",class: 'hidden_box'}
          -#     %ul.buy__container__item__inner--form--point--ul--li--point.hidden_show
          -#       %li.point-form
