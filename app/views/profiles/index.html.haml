.profile__container
    .profile__container__top
        %h1 プロフィール
        = form_for @user, url: profile_path(@user),html: {method: "patch"} do |f|
            %section.profile__container__top--names
                %figure.profile__container__top--names--figure
                    = image_tag "#{@user.user_image.image_url}",witdh: '60px' ,height: '60px'
                = f.text_field :nickname, value: @user.nickname, placeholder: '例)AYA☆セール中'
            .profile__container__top--contents
                = f.fields_for :user_info, @user_info do |s|
                    = s.text_area :profile_comment, value: "#{@user_info.profile_comment}", placeholder: "例）こんにちは☆ ご覧いただきありがとうございます！かわいいものやきれいめオフィスカジュアル中心に出品しています。服のサイズは主に9号です。気持ちよくお取引できるよう心がけていますので、商品や発送方法などご質問がありましたらお気軽にどうぞ♪"
                = f.submit "変更する", type: "submit", class: "btn-default"
