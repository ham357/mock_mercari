.ccreate__container
    %section.ccreate__container__top
        %h2 クレジットカード情報入力
        %form.ccreate__container__top__form
            .ccreate__container__top__form__content
                .ccreate__container__top__form__content--group
                    %label{for: "payment_card_no", class: "input--label"} カード番号
                    %span.require 必須
                    %input.input--default{type: "text", value_id: "payment_card_no", placeholder: "半角数字のみ", 'data-input-type': "card", class: "input-default"}
                    %ul.ccreate__container__top__form__content--group--brand
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/visa.svg", id: "visa"}
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/master-card.svg", id: "master"}
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/saison-card.svg", id: "saison"}
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/jcb.svg", id: "jcb"}
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/american_express.svg", id: "express"}
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/dinersclub.svg", id: "diners"}
                        %li.ccreate__container__top__form__content--group--brand--list
                            %img{ src:"/images/discover.svg", id: "discover"}
                .ccreate__container__top__form__content--expire
                    %label{for: "payment_card_no", class: "input--label"} 有効期限
                    %span.require 必須
                    .ccreate__container__top__form__content--expire--wrap
                        %select{id:"payment_card_expire_mm", class: "select-default"}
                            %option{value: "01"} 01
                            %option{value: "02"} 02
                            %option{value: "03"} 03
                            %option{value: "04"} 04
                            %option{value: "05"} 05
                            %option{value: "06"} 06
                            %option{value: "07"} 07
                            %option{value: "08"} 08
                            %option{value: "09"} 09
                            %option{value: "10"} 10
                            %option{value: "11"} 11
                            %option{value: "12"} 12
                        %i.fas.fa-chevron-down
                    %span.select-month 月
                    .ccreate__container__top__form__content--expire--wrap
                        %select{id:"payment_card_expire_yy", class: "select-default"}
                            %option{value: "19"} 19
                            %option{value: "20"} 20
                            %option{value: "21"} 21
                            %option{value: "22"} 22
                            %option{value: "23"} 23
                            %option{value: "24"} 24
                            %option{value: "25"} 25
                            %option{value: "26"} 26
                            %option{value: "27"} 27
                            %option{value: "28"} 28
                            %option{value: "29"} 29
                        %i.fas.fa-chevron-down
                    %span.select-yeah 年
                .ccreate__container__top__form__content--code
                    %label{for: "payment_card_no", class: "input--label"} セキュリティコード
                    %span.require 必須
                    %input.input--default{type: "text", value_id: "payment_card_security_code", placeholder: "カード背面4桁もしくは3桁の番号", class: "input-default"}
                .ccreate__container__top__form__content--sequ
                    .ccreate__container__top__form__content--sequ--text
                        %i.fas.fa-question-circle
                        %p.sequ_box カード裏面の番号とは？
                        .arrow_box
                            %p カードの裏面をご参照ください。
                %button{type: "button", class: "btn-default",  href: "#"} 追加する
