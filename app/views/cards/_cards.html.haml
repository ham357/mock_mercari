%li.card__container__top__section__info__title--list--card__list
    %form.card__container__top__section__info__title--list--card__list__form
        %figure.card__container__top__section__info__title--list--card__list__form--figure
            - if @card_infomation.brand == 'Visa'
                = image_tag '/images/visa.svg', id: "visa"
            - elsif @card_infomation.brand == 'MasterCard'
                = image_tag '/images/master-card.svg', id: 'master'
            -elsif @card_infomation.brand == 'JCB'
                = image_tag '/images/jcb.svg"', id: 'jcb'
        .card__container__top__section__info__title--list--card__list__form--num #{"**** **** **** " + @card_infomation.last4}
        .card__container__top__section__info__title--list--card__list__form--num #{@card_infomation.exp_month.to_s+"/"+@card_infomation.exp_year.to_s.slice(2,3)}
        = link_to delete_cards_path,method: :delete do
            %button.card__container__top__section__info__title--list--card__list__form--remove{type: "submit"} 削除する
