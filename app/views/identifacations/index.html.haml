.identifi__container
    .identifi__container__top
        %section.identifi__container__top__section
            %h2 本人確認の登録
        = form_for @user_info, html:{class:"identifi__container__top__section--form"}  do |f|
            .identifi__container__top__section--form--top
                %p
                お客様の本人情報をご登録下さい
                %br 登録されたお名前・生年月日を変更する場合、本人確認書類の提出が必要になります。
                %p.identifi__container__top__section--form--top--p
                    = link_to "本人確認書類のアップロードについて", '#'
                    %i.fas.fa-chevron-right
            = render partial: "user", locals: { label:'お名前', value: "#{@user.user_info.first_name + ' ' + @user.user_info.last_name}" }
            = render partial: "user", locals: { label:'お名前カナ', value: "#{@user.user_info.kana_first_name + ' ' + @user.user_info.kana_last_name}" }
            = render partial: "user", locals: { label:'誕生日', value: "#{@user.user_info.birth_year}/#{@user.user_info.birth_month}/#{@user.user_info.birth_day}" }
            .identifi__container__top__section--form--groupf
                %label{for: "postal_code"} 郵便番号
                %span.arbitrary 任意
                = f.text_field :postal_code,class: 'input--default', placeholder: "例） 1234567"
            .identifi__container__top__section--form--groups
                %label{for: "state"} 都道府県
                %span.arbitrary 任意
                .identifi__container__top__section--form--groups--wrap
                    = f.collection_select :state_id, State.all, :id, :name, {selected: "13"}, class: "select--default"
                    %i.fas.fa-chevron-down
            .identifi__container__top__section--form--groupf
                %label{for: "city"} 市区町村
                %span.arbitrary 任意
                = f.text_field :city,class: 'input--default', placeholder: "例） 東京都立川市"
            .identifi__container__top__section--form--groupf
                %label{for: "address"} 番地
                %span.arbitrary 任意
                = f.text_field :address,class: 'input--default', placeholder: "例） 羽衣町2-7-3"
            .identifi__container__top__section--form--groupf
                %label{for: "address2"} 建物名
                %span.arbitrary 任意
                = f.text_field :address2,class: 'input--default', placeholder: "例） レスポワール立川101"
            .identifi__container__top__section--form--groupb
                %button.btn--default{type: "submit"} 登録する
            .identifi__container__top__section--form--bottom
                .identifi__container__top__section--form--bottom--p
                    = link_to "本人情報の登録について", '#'
                    %i.fas.fa-chevron-right
