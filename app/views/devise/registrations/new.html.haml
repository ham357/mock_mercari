%header.signup__header
  %h1.signup__header--h1
    = link_to "#" do
      %img{src: "/images/logo.svg", class: "signup__header--h1--img"}

.signup__container
  %section.signup__container__section
    %h2.signup__container__section--h2 新規会員登録
    .signup__container__section__inner
      .signup__container__section__inner__content
        = link_to "" do
          .btn--default
            %i.far.fa-envelope
            %p メールアドレスで登録
      .signup__container__section__inner__fb
        = link_to "" do
          .btn--default
            %i.fab.fa-facebook-square
            %p Facebookで登録
      .signup__container__section__inner__google
        = link_to "" do
          .btn--default
            %i.fab.fa-google
            %p Googleで登録

%footer.signup__footer
  %nav.signup__footer__nav
    %ul.signup__footer__nav--ul
      %li.signup__footer__nav--ul--li プライバシーポリシー
      %li.signup__footer__nav--ul--li メルカリ利用規約
      %li.signup__footer__nav--ul--li 特定商取引に関する表記
  = link_to "#", class:"signup__footer--a"  do
    %img{ src: "/images/logo-gray.svg", class: "signup__footer--a--img"}
  %p.signup__footer--p
    %small © 2019 Mecrari



%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :email
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
= render "devise/shared/links"
